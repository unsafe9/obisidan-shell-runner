{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "globals": {
        "NodeJS": "readonly"
    },
    "rules": {
        "no-unused-vars": "off",
        "no-prototype-builtins": "off",
        "no-var": "error",
        "prefer-const": "error"
    }
}